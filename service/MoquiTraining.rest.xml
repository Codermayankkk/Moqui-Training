<?xml version="1.0" encoding="UTF-8"?>
    <resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-3.xsd"
              name="MoquiTraining" displayName="MoquiTraining REST API" version="2.0.0">

    <resource name="moquiTrainingGet" require-authentication="anonymous-all">
       <method type="get">
           <service name="moqui.training.MoquiTrainingService.find#MoquiTraining"/>
       </method>
        <id name="trainingId" >
          <method type="get">
              <entity name="moquiExample" operation="one"/>
          </method>
        </id>
    </resource>

    <resource name="moquiTrainingPost" require-authentication="anonymous-all">
        <method type="post">
            <service name="moqui.training.MoquiTrainingService.create#MoquiTraining"/>
        </method>
    </resource>
    
    <resource name="moquiTrainingPut" require-authentication="anonymous-all">
        <method type="put">
            <service name="moqui.training.MoquiTrainingService.store#MoquiTraining"/>
        </method>
    </resource>

    <resource name="moquiTrainingDelete" require-authentication="anonymous-all">
      <id name="trainingId">
        <method type="delete">
            <service name="moqui.training.MoquiTrainingService.delete#MoquiTraining"/>
        </method>
      </id>
    </resource>
</resource>